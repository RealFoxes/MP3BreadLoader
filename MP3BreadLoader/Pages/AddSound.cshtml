@page
@model AddSoundModel
@{
	ViewData["Title"] = "Загрузчик звуков";
}
<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="oggFile">Выберите OGG файл:</label>
		<input type="file" class="form-control-file" id="oggFile" name="OggFile" accept=".ogg">
	</div>
	<div class="form-group">
		<label for="audioName">Полное наименование звука:</label>
		<input type="text" class="form-control" id="audioName" name="AudioName">
	</div>
	<div class="form-group">
		<label for="audioShortName">Короткое наименование звука:</label>
		<input type="text" class="form-control" id="audioShortName" name="AudioShortName">
	</div>
	<div class="form-group">
		<div class="form-check">
			<input type="checkbox" class="form-check-input" id="isFamilyFilter" name="IsFamilyFilter">
			<label class="form-check-label" for="isFamilyFilter">Семейный фильтр</label>
		</div>
	</div>
	<div class="form-group">
		<input type="submit" class="btn btn-primary" value="Загрузить">
	</div>
</form>

@if (Model.IsUploaded)
{
	<h3>Звук успешно загружен</h3>
}

